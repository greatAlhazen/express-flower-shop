<%- include('../partials/head')  %>
<link rel="stylesheet" href="/css/users/form.css">
</head>
<body>

    <%- include('../partials/flash')  %> 

    <!-- form container -->
    <section class="formContainer">
        <form action="/auth/register" method="POST">
        <h1 class="formContainerHeading">Register</h1>
        <div class="formContainerBox">
            <input type="text" name="user[username]" placeholder="please enter your Username...." autocomplete="off" id="username">
            <span class="formContainerBoxInfo" id="nameError"></span>
        </div>
        <div class="formContainerBox">
            <input type="email" name="user[email]" placeholder="please enter your Email...." autocomplete="off" id="email">
            <span class="formContainerBoxInfo" id="emailError"></span>
        </div>
        <div class="formContainerBox">
            <input type="password" name="user[password]" placeholder="please enter your Password....." autocomplete="off" id="password">
            <span class="fas fa-eye-slash"></span>
            <span class="fas fa-eye"></span>
            <span class="formContainerBoxInfo" id="passwordError"></span>
        </div>
        <div class="formContainerBox">
            <input type="password" name="user[repeat_password]" placeholder="please enter your Password Again...." autocomplete="off" id="againPassword">
            <span class="fas fa-eye-slash" id="close"></span>
            <span class="fas fa-eye" id="open"></span>
            <span class="formContainerBoxInfo" id="againError"></span>
        </div>
        <span class="formContainerBoxInfo" id="commonError"></span>
        <button class="btn" id="submitButton" onclick="return validateForm()">Register</button>
        <a href="/auth/login" class="formContainerRedirect">Or <span>Login</span></a>
    </form>
    </section>

    
    <script src="/scripts/users/form.js"></script>
    <script src="/scripts/users/registerValidation.js"></script>
    <%- include('../partials/end')  %> 
