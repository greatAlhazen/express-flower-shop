<%- include('partials/head')  %>
<link rel="stylesheet" href="/css/profile.css">
</head>
<body>


    <section class="userPage">
        <form class="formContainer">
            <h1 class="formContainerTitle">Profile</h1>
            <input type="file" hidden id="file" accept="image/*">
         <div class="imageUpload" data-img="">
            <i class="fa-solid fa-file-image"></i>
        </div>
        <button type="button" class="btn-2 imageBtn">Choose Image</button>
        <div class="formContainerBox">
            <input type="text" name="username" autocomplete="off" id="username" required>
            <h4>Your Username</h4>
            <span class="formContainerBoxInfo" id="nameError"></span>
        </div>
        <div class="formContainerBox">
            <input type="email" name="email"  autocomplete="off" id="email" required>
            <h4>Your Email</h4>
            <span class="formContainerBoxInfo" id="emailError"></span>
        </div>
        <div class="formContainerBox">
            <input type="password" name="password"  autocomplete="off" id="password" required>
            <span class="fas fa-eye"></span>
            <span class="fas fa-eye-slash"></span>
            <h4>Your Password</h4>
            <span class="formContainerBoxInfo" id="passwordError"></span>
        </div>
        <div class="formContainerBox">
            <input type="password" autocomplete="off" id="againPassword" required>
            <span class="fas fa-eye"></span>
            <span class="fas fa-eye-slash"></span>
            <h4>Again Password</h4>
            <span class="formContainerBoxInfo" id="againError"></span>
        </div>
        <button class="btn-2" id="submitButton" onclick="return validateForm()">update</button>
    </form>
    </section>

    <script src="/scripts/profile.js"></script>
    <script src="/scripts/form.js"></script>
    <script src="/scripts/registerValidation.js"></script>
    <%- include('partials/end')  %> 