<header>
    <div class="logo">
        <img src="/images/logo.png" alt="">
        <h1 class="logoTitle">FlowerSs</h1>
    </div>
    <ul class="navList">
        <li class="navListItem"><a href="/home/" class='active' id="links">Home</a></li>
        <li class="navListItem"><a href="/home/#categories" id="links">Categories</a></li>
        <li class="navListItem"><a id="links">Products</a></li>
        <li class="navListItem"><a id="links">Featured</a></li>
        <li class="navListItem"><a id="links">Contact</a></li>
        <% if(!username){ %>
            <li class="navListItem"><a href="/auth/login" class="btn">Login</a></li>
         <% } %>

    </ul>
    <div class="user-sec">
        <div class="badge">
            <i class="fas fa-shopping-cart"></i>
            <span>0</span>
        </div>
