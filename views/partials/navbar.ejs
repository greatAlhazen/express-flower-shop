<header>
    <div class="logo">
        <img src="/images/logo.png" alt="">
        <h1 class="logoTitle">FlowerSs</h1>
    </div>
    <ul class="navList">
        <li class="navListItem"><a href="/home/" class='active' id="links">Home</a></li>
        <li class="navListItem"><a href="/home/#categories" id="links">Categories</a></li>
        <li class="navListItem"><a href="/product/products" id="links">Products</a></li>
        <li class="navListItem"><a href="/home/#products" id="links">Featured</a></li>
        <% if(!username){ %>
            <li class="navListItem"><a href="/auth/login?path=<%=path %> " class="btn">Login</a></li>
         <% } %>

    </ul>
    <div class="user-sec">
        <a href="/cart/getCart/<%= id %>">
        <div class="badge">
            <i class="fas fa-shopping-cart"></i>
            <span><%= quantity %> </span>
        </div>
    </a>
        <div class="fas fa-bars" id="menu"></div>
        <% if(username && username.length) {%>
        <img src=<%= image  %>  class="userImage" id="userImage" alt="userImage">
        <div class="userInfo">
            <div class="userInfoTop">
            <img src=<%= image  %>  alt="userImage">
            <h4 class="userInfoTopTitle"><%= username  %> </h4>
        </div>
        <ul class="userInfoLinks"> 
            <li><a href="/user/update/<%= id %>"><i class="fa-solid fa-user-tie"></i>Edit Profile</a></li>
            <% if(isAdmin) {%>
            <li><a href="/admin/"><i class="fa-solid fa-bars-progress"></i>Dashboard</a></li>
            <% } %>
            <li><a href="/cart/getCart/<%= id %>"><i class="fa-solid fa-basket-shopping"></i>My Cart</a></li>
            <li><a href="/user/change/<%= id  %>"><i class="fa-solid fa-lock"></i>Change Password</a></li>
            <li>
            <form action="/auth/logout?path=<%= path %>" class="userInfoLinksLogout" method="POST">
                <button >
                     <i class="fa-solid fa-arrow-right-from-bracket"></i>
                    Logout
                </button>    
        </form>
        </li>


    </ul>
</div>
<% } %>
    </div>
</header>


