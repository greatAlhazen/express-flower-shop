            <li><a><i class="fa-solid fa-bars-progress"></i>Dashboard</a></li>
            <% } %>
            <li><a><i class="fa-solid fa-gear"></i>Settings</a></li>
            <li><a><i class="fa-solid fa-basket-shopping"></i>My Cart</a></li>
            <li>
            <form action="/auth/logout" class="userInfoLinksLogout" method="POST">
                <button >
                     <i class="fa-solid fa-arrow-right-from-bracket"></i>
                    Logout
                </button>    
        </form>
        </li>


    </ul>
</div>
<% } %>
    </div>
